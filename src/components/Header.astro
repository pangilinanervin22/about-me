---
import HeaderLink from "./HeaderLink.astro";
import { SITE_TITLE } from "../consts";
import Title from "./_common/Title.astro";
---

<header>
	<!-- <h2>
		{SITE_TITLE}
	</h2> -->

	<Title content="Ervin Pangilinan" color="white" />
	<nav>
		<HeaderLink href="/">Home</HeaderLink>
		<HeaderLink href="/about">About</HeaderLink>
	</nav>
</header>
<style lang="scss">
	header {
		display: flex;
		position: fixed;
		justify-content: center;
		align-items: center;
		padding-block: 10px;
		background: #28282a;
		color: #ffffff;
		z-index: 10;
		width: 100%;

		h2 {
			font-size: 35px;
			color: #ffffff;
		}

		nav {
			position: absolute;
			right: 0;
			margin-right: 10px;
			font-size: 20px;

			* {
				color: #ffffff;
				font-weight: 700;
			}

			:last-child {
				color: dodgerblue;
			}
		}
	}
</style>
