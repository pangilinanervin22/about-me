<nav class="navbar">
        <div class="navbar-title">
                <span class="navbar-main-title">My Portfolio</span>
        </div>

        <ul class="nav-list">
                <li><a href="/">Home</a></li>
                <li><a href="/about">About</a></li>
                <li><a href="/projects">Projects</a></li>
