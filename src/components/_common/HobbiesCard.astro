---
interface Props {
	imageSrc: string;
	title: string;
	color?: string;
}

const {
	imageSrc = "https://images.pexels.com/photos/14446665/pexels-photo-14446665.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1",
	title = "Hello World",
} = Astro.props;
---

<div class="card">
	<img src={imageSrc} alt="wew" />
	<span>
		<h1>{title}</h1>
		<hr />
	</span>
</div>

<style lang="scss">
	@import "../../styles/_mixins.scss";

	.card {
		@include flex_center();
		position: relative;
		color: whitesmoke;
		width: 100%;
		height: 100%;
		overflow: hidden;
		transition: all 0.5s;
		background: rgba(0, 0, 0, 0.6);
		cursor: pointer;

		&:hover {
			background: none;
			padding: 5px;

			span {
				color: white;
				border: 6px solid white;

				hr {
					visibility: hidden;
				}
			}
		}

		h1 {
			font-size: 30px;
		}

		img {
			object-fit: cover;
			position: absolute;
			z-index: -1;
			width: 100%;
			height: 100%;
		}

		span {
			@include flex_center(column);
			text-align: center;
			padding: 10px 30px;
			margin: 10px;
			border: 6px;
			hr {
				height: 5px;
				width: 50px;
				margin-top: 6px;
				background: white;
			}
		}
	}
</style>
